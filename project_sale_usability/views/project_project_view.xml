<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="project_project_view_form" model="ir.ui.view">
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project" />
        <field name="groups_id" eval="[(4, ref('sales_team.group_sale_salesman'))]" />
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button
          class="oe_stat_button"
          name="button_open_out_invoice"
          type="object"
          icon="fa-pencil-square-o"
        >
                    <field
            string="Out Invoices"
            name="out_invoice_count"
            widget="statinfo"
          />
                </button>
                <button
          class="oe_stat_button"
          name="button_open_out_invoice_line"
          type="object"
          icon="fa-pencil-square-o"
        >
                    <field
            string="Out Invoice Lines"
            name="out_invoiced"
            widget="statinfo"
          />
                </button>
                <button
          class="oe_stat_button"
          name="button_open_out_refund"
          type="object"
          icon="fa-pencil-square-o"
        >
                    <field
            string="Out Refund"
            name="out_refund_count"
            widget="statinfo"
          />
                </button>
                <button
          class="oe_stat_button"
          name="button_open_out_refund_line"
          type="object"
          icon="fa-pencil-square-o"
        >
                    <field
            string="Out Refund Lines"
            name="out_refund"
            widget="statinfo"
          />
                </button>
            </div>
        </field>
    </record>
</odoo>
