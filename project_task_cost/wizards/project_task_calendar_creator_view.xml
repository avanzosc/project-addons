<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="project_task_calendar_creator_view_form" model="ir.ui.view">
        <field name="model">project.task.calendar.creator</field>
        <field name="arch" type="xml">
            <form>
                <footer>
                <button name="button_create_calendar" string="Create Calendar for all tasks"
                        type="object" class="oe_highlight" context="{'all': True}" />
                <button name="button_create_calendar" string="Create Calendar for Task Without it"
                        type="object" class="oe_highlight" />
                <button name="button_open_calendar" string="Open Task Calendar"
                        type="object" />
                <button special="cancel" string="Cancel" class="btn-default" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_upload_education_activity_type" model="ir.actions.act_window">
        <field name="name">Project Task Calendar</field>
        <field name="res_model">project.task.calendar.creator</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="project_task_calendar_creator_menuitem"
              parent="project.menu_project_report"
              action="action_upload_education_activity_type"/>
</odoo>
