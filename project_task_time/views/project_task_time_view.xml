<odoo>
    <record id="project_task_time_tree_view" model="ir.ui.view">
        <field name="name">project.task.time.tree</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_tree2" />
        <field name="arch" type="xml">
            <field name="remaining_hours" position="after">
                <field name="estim_cost" />
                <field name="real_hour_cost" />
                <field name="estim_time" />
                <field name="date_start"/>
                <field name="date_end"/>
            </field>
        </field>
    </record>

    <record id="project_task_time_form_view" model="ir.ui.view">
        <field name="name">project.task.time.form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2" />
        <field name="arch" type="xml">
            <field name="user_id" position="after">
                <field name="estim_cost" />
                <field name="real_hour_cost" />
                <field name="estim_time" />
            </field>
        </field>
    </record>
</odoo>
