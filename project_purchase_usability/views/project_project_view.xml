<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="project_project_view_form" model="ir.ui.view">
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project" />
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button
          class="oe_stat_button"
          name="button_open_in_invoice"
          type="object"
          icon="fa-pencil-square-o"
          attrs="{'invisible': [('in_invoice_count', '=', 0)]}"
        >
                    <field
            string="In Invoices"
            name="in_invoice_count"
            widget="statinfo"
          />
                </button>
                <button
          class="oe_stat_button"
          name="button_open_in_invoice_line"
          type="object"
          icon="fa-pencil-square-o"
          attrs="{'invisible': [('in_invoiced', '=', 0)]}"
        >
                    <field
            string="In Invoice Lines"
            name="in_invoiced"
            widget="statinfo"
          />
                </button>
                <button
          class="oe_stat_button"
          name="button_open_in_refund"
          type="object"
          icon="fa-pencil-square-o"
          attrs="{'invisible': [('in_refund_count', '=', 0)]}"
        >
                    <field
            string="In Refund"
            name="in_refund_count"
            widget="statinfo"
          />
                </button>
                <button
          class="oe_stat_button"
          name="button_open_in_refund_line"
          type="object"
          icon="fa-pencil-square-o"
          attrs="{'invisible': [('in_refund', '=', 0)]}"
        >
                    <field
            string="In Refund Lines"
            name="in_refund"
            widget="statinfo"
          />
                </button>
            </div>
        </field>
    </record>

</odoo>
