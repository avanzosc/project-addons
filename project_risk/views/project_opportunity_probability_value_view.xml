<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<!--  VISTA DE  -->
    <record model="ir.ui.view" id="project_opportunity_probability_value_tree_view">
        <field name="name">project.opportunity.probability.value.tree.view</field>
        <field name="model">project.opportunity.probability.value</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="rating"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="project_opportunity_probability_value_form_view">
        <field name="name">project.opportunity.probability.value.form.view</field>
        <field name="model">project.opportunity.probability.value</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group name="main">
                        <field name="name"/>
                        <field name="rating"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="project_opportunity_probability_value_action" model="ir.actions.act_window">
        <field name="name">Opportunity Probability</field>
        <field name="res_model">project.opportunity.probability.value</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{
        }</field>
    </record>
</odoo>
