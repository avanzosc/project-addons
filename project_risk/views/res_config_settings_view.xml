<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="project_risk_config_settings_form_view" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="project.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='project']" position="inside">
                <h2>Project Risk</h2>
                <div class="row mt16 o_settings_container" name="risk">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="risk_limit"/>
                            <div class="row">
                                <div class="text-muted col-md-8">
                                    You can set a risk limit value by default, it will be applied when creating a project.
                                </div>
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="risk_limit" class="o_light_label" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
