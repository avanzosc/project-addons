<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="account_analytic_billing_plan_view_tree" model="ir.ui.view">
        <field name="model">account.analytic.billing.plan</field>
        <field name="inherit_id"
               ref="account_analytic_billing_plan.account_analytic_billing_plan_tree_view" />
        <field name="arch" type="xml">
            <field name="analytic_account_id" position="after">
                <field name="allowed_task_ids" invisible="1" />
                <field name="task_id"
                       domain="[('id' ,'in', allowed_task_ids)]"
                       options="{'no_create': True}"
                       attrs="{'readonly': [('invoice_id','!=',False)]}" />
            </field>
        </field>
    </record>

    <record id="account_analytic_billing_plan_view_search" model="ir.ui.view">
        <field name="model">account.analytic.billing.plan</field>
        <field name="inherit_id"
               ref="account_analytic_billing_plan.account_analytic_billing_plan_search_view" />
        <field name="arch" type="xml">
            <field name="invoice_id" position="before">
                <field name="task_id" />
            </field>
            <filter name="analytic_account_group" position="after">
                <filter string="Task" name="project_task_group"
                        context="{'group_by':'task_id'}"/>
            </filter>
        </field>
    </record>

    <record id="account_analytic_billing_plan_view_form" model="ir.ui.view">
        <field name="model">account.analytic.billing.plan</field>
        <field name="inherit_id"
               ref="account_analytic_billing_plan.account_analytic_billing_plan_form_view" />
        <field name="arch" type="xml">
            <field name="analytic_account_id" position="after">
                <field name="allowed_task_ids" invisible="1" />
                <field name="task_id"
                       domain="[('id' ,'in', allowed_task_ids)]"
                       options="{'no_create': True}"
                       attrs="{'readonly': [('invoice_id','!=',False)]}"/>
            </field>
        </field>
    </record>
</odoo>
