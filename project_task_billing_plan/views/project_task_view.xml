<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="project_task_billing_plan_form_view" model="ir.ui.view">
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2" />
        <field name="groups_id" eval="[(4, ref('account_analytic_billing_plan.group_billing_plan_user'))]" />
        <field name="arch" type="xml">
            <button name="toggle_active" position="before">
                <button class="oe_stat_button" type="object" name="button_open_billing_plan" icon="fa-pencil-square-o">
                    <field string="Billing Plans" name="billing_plan_count" widget="statinfo"/>
                </button>
            </button>
        </field>
    </record>
</odoo>
