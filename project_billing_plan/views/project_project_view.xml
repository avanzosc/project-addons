<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="project_project_billing_plan_form_view" model="ir.ui.view">
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project" />
        <field name="arch" type="xml">
            <button name="toggle_active" position="before">
                <button class="oe_stat_button" type="object" name="button_open_billing_plan" icon="fa-pencil-square-o">
                    <field string="Billing Plans" name="billing_plan_count" widget="statinfo"/>
                </button>
            </button>
        </field>
    </record>
</odoo>
