<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="project_close_info_form_view">
        <field name="name">project.close.info.form.view</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project" />
        <field name="arch" type="xml">
            <page name="settings" position="before">
                <page name="close_info" string="Closing">
                    <group name="tech">
                        <field name='tech_close'/>
                        <field name='tech_date'/>
                        <field name='tech_user'/>
                        <field name='tech_file'/>
                    </group>
                    <group name="eco">
                        <field name='eco_close'/>
                        <field name='eco_date'/>
                        <field name='eco_user'/>
                        <field name='eco_file'/>
                    </group>
                </page>
            </page>
        </field>
    </record>
</odoo>
