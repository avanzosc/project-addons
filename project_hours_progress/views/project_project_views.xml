<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="edit_project" model="ir.ui.view">
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project" />
        <field name="arch" type="xml">
            <notebook position="before">
                <group>
                    <group>
                        <field
              name="tasks_planned_hours"
              class="o_field_float_time oe_inline ms-2"
              widget="timesheet_uom_no_toggle"
            />
                        <field
              name="tasks_real_hours"
              class="o_field_float_time oe_inline ms-2"
              widget="timesheet_uom_no_toggle"
            />
                        <field name="tasks_progress" widget="progressbar" />
                    </group>
                    <group>
                        <field name="milestones_percentages" />
                        <field name="milestones_percentages_solved" />
                        <field name="milestones_progress" widget="progressbar" />
                    </group>
                </group>
            </notebook>
        </field>
    </record>

    <record id="view_project" model="ir.ui.view">
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project" />
        <field name="arch" type="xml">
            <field name="user_id" position="after">
                <field name="tasks_progress" widget="progressbar" optional="show" />
                <field
          name="milestones_progress"
          widget="progressbar"
          optional="show"
        />
            </field>
        </field>
    </record>
</odoo>
