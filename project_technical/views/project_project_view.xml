<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="project_project_technical_form_view">
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project" />
        <field name="arch" type="xml">
            <notebook position="inside">
                <page name="tech_def" string="Technical Definition">
                    <group>
                        <field name='customer_goal' invisible="True"/>
                        <field name='internal_goal' invisible="True"/>
                        <field name='work_scope'/>
                        <field name='definition'/>
                        <field name='task_description' invisible="True"/>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
