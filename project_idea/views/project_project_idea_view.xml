<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="project_project_idea_form_view">
        <field name="name">project.project.idea.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project" />
        <field name="arch" type="xml">
            <page name="settings" position="before">
                <page name="IDEA" string="IDEA">
                    <group name="ident_opt" string="Identification of the Opportunity">
                        <group name="idea_left">
                            <field name="author_id" />
                            <field name="idea_date" />
                            <field name="internal_goal" />
                            <field name="customer_goal" />
                            <field name="technical_approach" />
                        </group>
                        <group name="idea_right">
                            <field name="idea_type"/>
                            <field name="idea_origin"/>
                            <field name="financing"/>
                            <field name="potential_customers"/>
                        </group>
                   </group>
                   <group name="human_resources"
                       string= "Human Resources">
                       <field name="human_resources_ids"  nolabel="1"/>
                   </group>
                   <group name="material_resources"
                       string="Material Resources">
                       <field name="material_resources_ids"  nolabel="1"/>
                   </group>
                    <group name="lines_viability"
                       string="Feasibility Lines">
                       <field name="lines_viability_ids"  nolabel="1"/>
                   </group>
                   <group name="cat_viability"
                       string="Viability by Category">
                       <field name="cat_viability_ids"  nolabel="1"/>
                   </group>
                </page>
            </page>
        </field>
    </record>
</odoo>
