<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<!--  VISTA DE LISTA -->
    <record model="ir.ui.view" id="project_idea_cat_viability_tree_view">
        <field name="name">project.idea.cat.viability.tree.view</field>
        <field name="model">project.idea.cat.viability</field>
        <field name="arch" type="xml">
            <tree>
                <field name="project_id" invisible="context.get('hide_project_id',True)"/>
                <field name="category_id"/>
                <field name="cat_percentage"/>
                <field name="cat_punctuation"/>
                <field name="cat_pondered"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="project_idea_cat_viability_form_view">
        <field name="model">project.idea.cat.viability</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group name="viability_group">
                        <group name="viability_group_left">
                            <field name="project_id" invisible="context.get('hide_project_id',True)"/>
                            <field name="category_id"/>
                        </group>
                        <group name="viability_group_right">
                            <field name="cat_percentage"/>
                            <field name="cat_punctuation"/>
                            <field name="cat_pondered"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="project_idea_cat_viability_search_view">
        <field name="model">project.idea.cat.viability</field>
        <field name="arch" type="xml">
            <search>
                <field name="project_id"/>
                <field name="category_id"/>
                <group name="group_by" expand="0">
                    <filter name="group_project" string="Project"
                            context="{'group_by': 'project_id'}" />
                    <filter name="group_category" string="Category"
                            context="{'group_by': 'category_id'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="project_idea_cat_viability_action" model="ir.actions.act_window">
        <field name="name">Viability per Category</field>
        <field name="res_model">project.idea.cat.viability</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{
            'hide_project_id': False,
        }</field>
    </record>

    <menuitem id="project_idea_cat_viability_menuitem"
              parent="project_idea_menuitem"
              action="project_idea_cat_viability_action"
              sequence="30" />
</odoo>
