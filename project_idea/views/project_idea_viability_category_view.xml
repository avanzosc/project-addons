<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="project_idea_viability_category_tree_view">
        <field name="model">project.idea.viability.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

<!--  VISTA DE FORMULARIO -->
    <record model="ir.ui.view" id="project_idea_viability_category_form_view">
        <field name="name">project.idea.viability.category.view</field>
        <field name="model">project.idea.viability.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="project_idea_viability_category_search_view">
        <field name="model">project.idea.viability.category</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="project_idea_viability_category_action" model="ir.actions.act_window">
        <field name="name">Viability Category</field>
        <field name="res_model">project.idea.viability.category</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{
        }</field>
    </record>

    <menuitem id="project_idea_viability_category_menuitem"
              parent="project_idea_menuitem"
              action="project_idea_viability_category_action"
              sequence="15" />
</odoo>
