<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="project_viability_category_tree_view" model="ir.ui.view">
        <field name="model">project.viability.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code" />
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="project_viability_category_form_view" model="ir.ui.view">
        <field name="model">project.viability.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="code" />
                        <field name="name" />
                    </group>
                    <field name="factor_ids" />
                </sheet>
            </form>
        </field>
    </record>

    <record id="project_viability_category_action" model="ir.actions.act_window">
        <field name="name">Viability Category</field>
        <field name="res_model">project.viability.category</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{
        }</field>
    </record>
</odoo>
