<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="project_config_settings_form_view" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="project.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='project']" position="inside">
                <h2>Project Budget</h2>
                <div class="row mt16 o_settings_container" data-key="project_budget_settings" title="Specific Settings For Project Budget">
                    <div class="col-xs-12 col-md-6 o_setting_box" name="summary">
                        <div class="o_setting_left_pane">
                            <field name="summary_line"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="summary_line"/>
                            <div class="text-muted">
                                It will create a line on december 30th of the last year.
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box" name="actual_budget">
                        <div class="o_setting_left_pane">
                            <field name="group_smartbutton_actual_budget"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="group_smartbutton_actual_budget"/>
                            <div class="text-muted">
                                Show a smartbutton to access directly to current month budget.
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
