<?xml version="1.0" encoding="UTF-8"?>
<odoo noupdate="1">
    <record id="account_account_employee_receivable" model="account.account">
        <field name="code">XXX</field>
        <field name="name">Employee Receivable</field>
        <field name="reconcile" eval="True"/>
        <field name="user_type_id" ref="account.data_account_type_receivable" />
    </record>

    <record id="account_account_employee_payable" model="account.account">
        <field name="code">YYY</field>
        <field name="name">Employee Payable</field>
        <field name="reconcile" eval="True"/>
        <field name="user_type_id" ref="account.data_account_type_payable" />
    </record>

    <record id="account_journal_employee" model="account.journal"
            forcecreate="True">
        <field name="name">Employee Journal</field>
        <field name="type">general</field>
        <field name="code">EMP</field>
    </record>
</odoo>
