<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="view_account_analytic_line_form" model="ir.ui.view">
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="analytic.view_account_analytic_line_form"/>
        <field name="arch" type="xml">
             <field name="company_id" position="after">
                <field name="project_id"/>
                <field name="task_id"/>
                <field name="project_type_id"/>
                <field name="framework_id"/>
                <field name="generic"/>
             </field>
        </field>
    </record>

    <record id="view_account_analytic_line_tree" model="ir.ui.view">
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="analytic.view_account_analytic_line_tree"/>
        <field name="arch" type="xml">
             <field name="company_id" position="after">
                <field name="project_id"/>
                <field name="task_id"/>
                <field name="project_type_id"/>
                <field name="framework_id"/>
                <field name="generic"/>
             </field>
        </field>
    </record>

    <record id="view_account_analytic_line_filter" model="ir.ui.view">
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="analytic.view_account_analytic_line_filter"/>
        <field name="arch" type="xml">
            <field name="account_id" position="after">
                <field name="project_id"/>
                <field name="task_id"/>
                <field name="project_type_id"/>
                <field name="framework_id" />
                <field name="generic"/>
            </field>
            <filter name="account_id" position="after">
                <filter name="project" string="Project" domain="[]" context="{'group_by' : 'project_id'}"/>
                <filter name="task" string="Task" domain="[]" context="{'group_by' : 'task_id'}"/>
                <filter name="project_type" string="Project type" domain="[]" context="{'group_by' : 'project_type_id'}"/>
                <filter name="frmawork" string="Framework" domain="[]" context="{'group_by' : 'framework_id'}"/>
                <filter name="generic" string="Generic" domain="[]" context="{'group_by' : 'generic'}"/>
            </filter>
            <filter name="group_date" position="after">
                <filter string="Generic" name="generic" domain="[('generic', '=', True)]"/>
                <filter string="No generic" name="no_generic" domain="[('generic', '=', False)]"/>
            </filter>
        </field>
    </record>
</odoo>
