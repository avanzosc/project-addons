<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="view_task_form2" model="ir.ui.view">
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
             <field name="tag_ids" position="after">
                <field name="framework_id"/>
                <field name="generic"/>
             </field>
        </field>
    </record>

    <record id="view_task_tree2" model="ir.ui.view">
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_tree2"/>
        <field name="arch" type="xml">
             <field name="user_id" position="after">
                <field name="framework_id"/>
                <field name="generic"/>
             </field>
        </field>
    </record>

    <record id="view_task_search_form" model="ir.ui.view">
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_search_form"/>
        <field name="arch" type="xml">
            <field name="user_id" position="after" >
                <field name="framework_id" />
                <field name="generic"/>
            </field>
            <filter name="user" position="after">
                <filter name="framework" string="Framework" domain="[]" context="{'group_by' : 'framework_id'}"/>
                <filter name="generic" string="Generic" domain="[]" context="{'group_by' : 'generic'}"/>
            </filter>
            <filter name="my_tasks" position="after">
                <separator />
                <filter string="Generic" name="generic" domain="[('generic', '=', True)]"/>
                <filter string="No generic" name="no_generic" domain="[('generic', '=', False)]"/>
                <separator />
            </filter>
        </field>
    </record>
</odoo>
